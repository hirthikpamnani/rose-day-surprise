<script>

/* ---------- DAY NIGHT THEME ---------- */
const toggle=document.getElementById('themeToggle');
let night=false;

toggle.onclick=()=>{
  night=!night;
  document.body.classList.toggle('night');
  toggle.innerText = night ? '‚òÄÔ∏è Day' : 'üåô Night';
}

/* ---------- MINI LOVE QUIZ ---------- */
const quizBox=document.getElementById('quizBox');
const quizQ=document.getElementById('quizQ');
const quizBtns=document.getElementById('quizBtns');

const quizData=[
  {q:'Who is the cutest person in the world? üòç',a:['Me','You ‚ù§Ô∏è']},
  {q:'What do we love more? üíï',a:['Fights','Each other ‚ù§Ô∏è']},
  {q:'Final question‚Ä¶ Will you stay with me forever? ü•∫',a:['No','Yes Forever ‚ù§Ô∏è']}
];

let qi=0;

function showQuiz(){
  quizBox.style.display='flex';
  loadQ();
}

function loadQ(){
  quizQ.innerText=quizData[qi].q;
  quizBtns.innerHTML='';
  quizData[qi].a.forEach((text,i)=>{
    const b=document.createElement('button');
    b.innerText=text;
    b.style.margin='6px';
    b.style.padding='8px 12px';
    b.style.border='none';
    b.style.borderRadius='12px';
    b.style.background='#ffd1dc';
    b.onclick=()=>{
      if(i===1){
        qi++;
        if(qi<quizData.length) loadQ();
        else{
          quizQ.innerText='Awww ‚ù§Ô∏è You passed! Love you sooo much üòò';
          quizBtns.innerHTML='';
          setTimeout(()=>quizBox.style.display='none',1800);
        }
      }else{
        b.innerText='Wrong üòù';
      }
    };
    quizBtns.appendChild(b);
  });
}

/* show quiz after YES clicked */
const oldYes = yesBtn.onclick;
yesBtn.onclick=function(){
  oldYes();
  setTimeout(showQuiz,1500);
}

</script>



