<script>

/* ---------- LOVE METER ---------- */
const range=document.getElementById('loveRange');
const loveVal=document.getElementById('loveValue');
range.oninput=()=>{
  const v=range.value;
  if(v<30) loveVal.innerText=v+'% üòí';
  else if(v<70) loveVal.innerText=v+'% üòä';
  else if(v<100) loveVal.innerText=v+'% üòç';
  else loveVal.innerText='100% ‚ù§Ô∏è Infinity Love!!!';
}

/* ---------- TYPEWRITER LETTER ---------- */
const typeSection=document.getElementById('typeSection');
const typeText=document.getElementById('typeText');

function startTyping(){
  typeSection.style.display='flex';
  const msg="Dear Muskaan, from the first day you came into my life everything became brighter. Your smile is my peace, your laugh is my happiness, and my heart belongs only to you forever. ‚ù§Ô∏è";
  let i=0; typeText.innerHTML='';
  const t=setInterval(()=>{
    typeText.innerHTML+=msg[i];
    i++; if(i>=msg.length) clearInterval(t);
  },35);
}

/* show letter after gift click too */
const oldGift=gift.onclick;
gift.onclick=()=>{ oldGift(); setTimeout(startTyping,300); }

/* ---------- HUG BUTTON ---------- */
const hugBtn=document.getElementById('hugBtn');
hugBtn.onclick=()=>{
  for(let i=0;i<12;i++){
    const h=document.createElement('div');
    h.className='hug';
    h.innerHTML='ü§ó';
    h.style.left=(Math.random()*100)+'vw';
    h.style.bottom='0px';
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),1200);
  }
}

/* ---------- FINAL ENDING ---------- */
function showFinal(){
  const final=document.getElementById('finalScreen');
  final.style.display='flex';
  setTimeout(()=>final.style.display='none',6000);
}

const oldYes2=yesBtn.onclick;
yesBtn.onclick=function(){
  oldYes2();
  setTimeout(startTyping,2500);
  setTimeout(showFinal,9000);
}

</script>

