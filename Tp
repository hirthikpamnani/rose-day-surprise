<script>

/* ---------------- typing effect ---------------- */
const message="Every moment with you feels magical ‚ù§Ô∏è";
const typingEl=document.getElementById('typing');
let i=0;
(function type(){if(i<message.length){typingEl.innerHTML+=message[i++];setTimeout(type,40)}})();

/* ---------------- slider ---------------- */
const slides=document.querySelectorAll('.slides img');
let current=0;
setInterval(()=>{
  slides.forEach(s=>s.classList.remove('active'));
  current=(current+1)%slides.length;
  slides[current].classList.add('active');
},2500);

/* ---------------- name input surprise ---------------- */
const nameInput=document.getElementById('nameInput');
const questionText=document.getElementById('questionText');
nameInput.addEventListener('input',()=>{
  if(nameInput.value.trim().length>0)
    questionText.innerHTML=`Will you be my Valentine, ${nameInput.value}? üíñ`;
});

/* ---------------- funny NO button ---------------- */
const noBtn=document.getElementById('noBtn');
function moveNo(){
  const x=Math.random()*150-75;
  const y=Math.random()*60-30;
  noBtn.style.transform=`translate(${x}px,${y}px)`;
  noBtn.innerText="No üò≠";
}
noBtn.addEventListener('mouseover',moveNo);
noBtn.addEventListener('click',moveNo);

/* ---------------- YES click effects ---------------- */
const yesBtn=document.getElementById('yesBtn');
const result=document.getElementById('result');
const danceGif=document.getElementById('danceGif');

yesBtn.onclick=()=>{
  result.innerHTML="Yayyy ‚ù§Ô∏è You just made me the happiest person alive!!!";
  danceGif.style.display='block';
  heartRain();
  confetti();
  fireworks();
};

/* ---------------- heart rain ---------------- */
function heartRain(){
  setInterval(()=>{
    const h=document.createElement('div');
    h.className='heart';h.innerHTML='‚ù§Ô∏è';
    h.style.left=Math.random()*100+'vw';
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),4000);
  },120);
}

/* ---------------- confetti ---------------- */
function confetti(){
  for(let i=0;i<100;i++){
    const c=document.createElement('div');
    c.className='confetti';
    c.style.left=Math.random()*100+'vw';
    c.style.background=['#ff4d88','#ffc0cb','#ffffff','#ff99cc'][Math.floor(Math.random()*4)];
    c.style.animationDelay=Math.random()*2+'s';
    document.body.appendChild(c);
    setTimeout(()=>c.remove(),3000);
  }
}

/* ---------------- fireworks ---------------- */
function fireworks(){
  for(let i=0;i<6;i++) setTimeout(burst,i*300);
}

function burst(){
  const x=window.innerWidth*Math.random();
  const y=window.innerHeight*Math.random()*0.6;
  for(let i=0;i<25;i++){
    const s=document.createElement('div');
    s.className='spark';
    s.style.background=['#ff4d88','#ffc0cb','#fff'][Math.floor(Math.random()*3)];
    s.style.left=x+'px';s.style.top=y+'px';
    s.style.setProperty('--x',(Math.random()*200-100)+'px');
    s.style.setProperty('--y',(Math.random()*200-100)+'px');
    document.body.appendChild(s);
    setTimeout(()=>s.remove(),700);
  }
}

/* ---------------- floating cute hearts bg ---------------- */
setInterval(()=>{
  const f=document.createElement('div');
  f.className='floatHeart';f.innerHTML='üíó';
  f.style.left=Math.random()*100+'%';
  f.style.bottom='0';
  document.body.appendChild(f);
  setTimeout(()=>f.remove(),6000);
},800);

</script>



